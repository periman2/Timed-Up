

<% include partials/header %>
<!--<script type="text/javascript" src="/groupedit.js"></script>-->
<script type="text/javascript" src="/timecalc.js"></script>
<link rel="stylesheet" href="/stylesheets/group.css">

<% if(group.authid._id.equals(currentUser._id)){ %>
    <% var editable = true; %>
<% } %>

<% if(group.authid.slack !== undefined && group.authid.slack !== null){ %>
    <% var username = group.authid.slack.username; %>
<% } else { %>
    <% var username = group.authid.username; %>
<% } %>

<h2 class="text-center"><strong>Welcome to group <span id="gname"><%= group.name %></span><strong></h2><br>
<% if(group.authid.slack.username !== undefined) { %>
    <h4 class="text-center">Made by <em><%= group.authid.slack.username; %></em></h4>
<% } else { %>
    <h4 class="text-center">Made by <em><%= group.authid.username; %></em></h4>
<% } %>

<div class="allgroup">
    <h3 class="text-center">ALL GROUP MEMBERS<h3>
    <% if (editable) { %>
    <div id="members" class="row editable">
    <% } else { %>
    <div id="members" class="row">
    <% } %>
    </div>
    <h3 class="text-center">TIME COORDINATOR<h3>
    <div class="timecoordinator">
        <div class="row">
            <div class="col-xs-12">
                <h4><strong>Meeting times for the whole group</strong></h4>
                <div class="mycomtimes">
                </div>
            </div>
            <div class="col-xs-4">
                <h4 class="text-center"><strong>You have common time with: </strong></h4>
                <div class="mycomfriends">
                </div>
            </div>
            <div class="col-xs-8">
                <h4 class="text-center"><strong>Selected common times</strong></h4>
                <div class="meandselected">
                </div>
            </div>
        </div>
        
    </div>
</div>

<!--<br>
<hr>-->
<div class="besttimes hidden">
    <div class='row'>
        <div class='allmembers col-xs-4 btn btn-default active'>
            <h3>All Members</h3>
        </div>
        <div class='onlycommon col-xs-4 btn btn-default'>
            <h3>Common Time</h3>
        </div>
        <div class='pairs col-xs-4 btn btn-default'>
            <h3>Pairs</h3>
        </div>
    </div>
